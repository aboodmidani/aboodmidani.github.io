---
import { Image } from "astro:assets";
import codiay from "../../public/codiay.png";
import tonb from "../../public/tonb.png";
import pdf from "../../public/pdf.jpeg";
import eptico from "../../public/eptico.png";
import metadata from "../../public/metadata.png";
import phishing from "../../public/phishing.png";

interface Project {
  title: string;
  image: ImageMetadata;
  link: string;
  preview: string;
  status: string;
}

const projects: Project[] = [
  {
    title: "Tonb",
    image: tonb as ImageMetadata,
    link: "https://gitlab.com/abdmidani",
    preview: "https://tonb.io/",
    status: "Blockchain banking",
  },
  {
    title: "Codiay",
    image: codiay as ImageMetadata,
    link: "https://gitlab.com/abdmidani",
    preview: "https://codiay.com/",
    status: "Digital agency",
  },
  {
    title: "Eptico",
    image: eptico as ImageMetadata,
    link: "https://gitlab.com/abdmidani",
    preview: "http://www.eptico.com/",
    status: "Integrated innovation company",
  },

  {
    title: "Phishing Email Analyzer",
    image: phishing as ImageMetadata,
    link: "https://github.com/aboodmidani/phishing-email-analyzer",
    preview: "https://phishing-email-analyzer.streamlit.app/",
    status: "Cybersecurity tool",
  },
  {
    title: "Metadata Remover",
    image: metadata as ImageMetadata,
    link: "https://github.com/aboodmidani/metadata-remover/",
    preview: "https://metadata-rm.streamlit.app/",
    status: "Cybersecurity tool",
  },
  {
    title: "Redacted pdf",
    image: pdf as ImageMetadata,
    link: "https://gitlab.com/abdmidani/redacted-pdf.git",
    preview: "https://redacted-pdf.netlify.app/",
    status: "Redacted pdf project",
  },
];
---

<section
  id="projects"
  class="py-12 border-t border-[#ffffff10] text-[var(--white)]"
>
  <div class="max-w-5xl mx-auto">
    <h2 class="text-lg text-[var(--sec)] mb-2 shiny-sec">My work</h2>
    <h3 class="text-4xl md:text-5xl font-medium mb-8">Projects</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {
        projects.map((project) => (
          <div class="group">
            <a
              href={project.preview}
              target="_blank"
              rel="noopener noreferrer"
              class="block"
            >
              <div class="rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 mb-4">
                <Image
                  src={project.image}
                  alt={project.title}
                  class="w-full h-48 md:h-72 object-fit group-hover:scale-105 transition-transform duration-300"
                />
              </div>
              <div class="flex items-center px-3">
                <div class="flex-grow">
                  <h4 class="text-2xl font-semibold">{project.title}</h4>
                  <span class="py-1 text-sm text-[var(--white-icon)]">
                    {project.status}
                  </span>
                </div>
                <div class="flex gap-2 ml-auto">
                  <a
                    target="_blank"
                    href={project.link}
                    aria-label="GitHub"
                    class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-7"
                    >
                      <path d="M24 12L18.3431 17.6569L16.9289 16.2426L21.1716 12L16.9289 7.75736L18.3431 6.34315L24 12ZM2.82843 12L7.07107 16.2426L5.65685 17.6569L0 12L5.65685 6.34315L7.07107 7.75736L2.82843 12ZM9.78845 21H7.66009L14.2116 3H16.3399L9.78845 21Z" />
                    </svg>
                  </a>
                  <a
                    target="_blank"
                    href={project.preview}
                    aria-label="Preview"
                    class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-1 border-[var(--white-icon-tr)] p-3 rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
                  >
                    <svg
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="currentColor"
                      class="size-7"
                    >
                      <path d="M16.0037 9.41421L7.39712 18.0208L5.98291 16.6066L14.5895 8H7.00373V6H18.0037V17H16.0037V9.41421Z" />
                    </svg>
                  </a>
                </div>
              </div>
            </a>
          </div>
        ))
      }
    </div>
    <a
      target="_blank"
      href="https://gitlab.com/abdmidani"
      aria-label="GitHub"
      class="w-full flex items-center justify-center gap-2 mt-9 text-[var(--white-icon)] hover:text-white transition duration-300 ease-in-out border border-[var(--white-icon-tr)] p-3 rounded-full bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
    >
      <span class="md:text-lg text-md">More projects on</span>

      <svg
        width="800px"
        height="800px"
        viewBox="0 0 16 16"
        xmlns="http://www.w3.org/2000/svg"
        class="size-6"
        ><path
          fill="#FC6D26"
          d="M14.975 8.904L14.19 6.55l-1.552-4.67a.268.268 0 00-.255-.18.268.268 0 00-.254.18l-1.552 4.667H5.422L3.87 1.879a.267.267 0 00-.254-.179.267.267 0 00-.254.18l-1.55 4.667-.784 2.357a.515.515 0 00.193.583l6.78 4.812 6.778-4.812a.516.516 0 00.196-.583z"
        ></path><path fill="#E24329" d="M8 14.296l2.578-7.75H5.423L8 14.296z"
        ></path><path fill="#FC6D26" d="M8 14.296l-2.579-7.75H1.813L8 14.296z"
        ></path><path
          fill="#FCA326"
          d="M1.81 6.549l-.784 2.354a.515.515 0 00.193.583L8 14.3 1.81 6.55z"
        ></path><path
          fill="#E24329"
          d="M1.812 6.549h3.612L3.87 1.882a.268.268 0 00-.254-.18.268.268 0 00-.255.18L1.812 6.549z"
        ></path><path fill="#FC6D26" d="M8 14.296l2.578-7.75h3.614L8 14.296z"
        ></path><path
          fill="#FCA326"
          d="M14.19 6.549l.783 2.354a.514.514 0 01-.193.583L8 14.296l6.188-7.747h.001z"
        ></path><path
          fill="#E24329"
          d="M14.19 6.549H10.58l1.551-4.667a.267.267 0 01.255-.18c.115 0 .217.073.254.18l1.552 4.667z"
        ></path></svg
      >
    </a>
  </div>
</section>
